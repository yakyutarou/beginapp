<div class='user-page'>
  ここは会員サイトへ移動するページです
</div>

<%= form_with model:@user, url: user_session_path, class:'account-page', id:'account-page',local: true do |f|%>

  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--right user-form'>
       <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, autofocus: true%>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password%>
              <i>(英数字6文字以上)</i>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "会員サイトへ移動", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>


